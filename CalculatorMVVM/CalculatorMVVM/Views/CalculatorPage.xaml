<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorMVVM.Views.CalculatorPage" Title="Калькулятор">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Keyboard="Numeric" Placeholder="Первое число"  Text="{Binding Num1, Mode=TwoWay}" />
            <Entry Keyboard="Numeric" Placeholder="Второе число" Text="{Binding Num2, Mode=TwoWay}" />


            <Button Text="+" BorderColor="Black" BorderWidth="2" BackgroundColor="White" Command="{Binding AddCommand}"></Button>
            <Button Text="-" BorderColor="Black" BorderWidth="2" BackgroundColor="White" Command="{Binding SubtractCommand}"></Button>
            <Button Text="*" BorderColor="Black" BorderWidth="2" BackgroundColor="White" Command="{Binding MultiplyCommand}"></Button>
            <Button Text="/" BorderColor="Black" BorderWidth="2" BackgroundColor="White" Command="{Binding DivideCommand}"></Button>
            <Button Text="C" BorderColor="Black" BorderWidth="2" BackgroundColor="White" Command="{Binding ClearCommand}"></Button>
            

            <Label FontSize="Large" Text="{Binding Result, Mode=TwoWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>